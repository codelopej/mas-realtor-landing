---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

import heroBannerImage from "@assets/images/pexels-rdne-8292836.jpg";
import Link from "@components/ui/Link.astro";
---

<section>
  <div class="grid gap-16 lg:grid-cols-2 lg:mt-12">
    <!-- Banner Content -->
    <div
      class="my-8 opacity-0 -translate-x-10 transition-all duration-500 ease-out"
      data-observe-left-in
    >
      <h1
        class="text-ellipsis font-bold lg:text-3xl xl:text-5xl text-pretty leading-tight tracking-tight"
      >
        Unlocking the Doors to Your Future.
      </h1>
      <p class="text-ellipsis lg:text-lg xl:text-2xl">
        Simplifying real estate, one family at a time. Expert guidance for every
        step of your real estate journey.
      </p>
      <div class="mt-4 space-x-2 z-10 relative">
        <Link variant="accent" href="/contact"> Let's Talk </Link>
        <Link href="/about"> About Us </Link>
      </div>
    </div>

    <!-- Banner Image -->
    <div
      class="relative max-h-max opacity-0 translate-x-10 transition-all duration-500 ease-out"
      data-observe-right-in
    >
      <!-- <Icon
        name="shape-01"
        class="absolute h-48 -top-24 -left-24 lg:h-32 lg:-top-8 lg:-left-16 xl:h-48 xl:-top-16 xl:-left-24 w-auto opacity-45"
      /> -->
      <!-- <Icon
        name="shape-02"
        class="absolute h-32 -bottom-16 -right-14 lg:h-16 lg:bottom-0 lg:-right-8 xl:h-32 xl:-bottom-8 xl:-right-14 -rotate-180 w-auto opacity-45"
      /> -->

      <div class="rounded-xl overflow-hidden">
        <Image
          src={heroBannerImage}
          alt="Hero Banner"
          class="w-full !m-0 aspect-auto object-cover h-full"
        />
      </div>
    </div>
  </div>
</section>
